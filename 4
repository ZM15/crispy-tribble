import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner scanner = new Scanner(System.in);
        int A = scanner.nextInt();        
        if (A % 2 == 0){
            System.out.println(A / 2);
        }
        else if (A == 1){
            System.out.println(0);
        }
        else{
            System.out.println(A);
        }
    }
}
